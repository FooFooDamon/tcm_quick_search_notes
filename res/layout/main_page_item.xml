<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imgv_main_page_item"
        android:contentDescription="@string/empty_string"
        android:layout_width="@dimen/default_icon_width"
        android:layout_height="@dimen/default_icon_height"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txv_main_page_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textAppearance="@style/DefaultTextStyle" />

    </LinearLayout>

</LinearLayout>
